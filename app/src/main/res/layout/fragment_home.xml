<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.fragments.main.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:text="Hi" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="Ada produk apa hari ini?" />

            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:id="@+id/search_bar"
                app:queryHint="Cari produk"
                app:iconifiedByDefault="false"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"
                android:includeFontPadding="false"
                android:text="Daftar Produk ðŸ”¥" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:id="@+id/swipeRefresh"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvEmpty"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Tidak ada data"
                        android:textSize="@dimen/_12sdp"
                        android:layout_centerVertical="true"/>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include layout="@layout/placeholder_item_product"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:id="@+id/rvProduct"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/list_producy"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/fabInsert"
            app:tint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/black"
            android:src="@drawable/baseline_add_24"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>
